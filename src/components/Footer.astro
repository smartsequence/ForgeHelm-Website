---
import { 
	STUDIO_NAME, 
	STUDIO_NAME_EN, 
	STUDIO_TAX_ID,
	SOCIAL_LINKEDIN,
	SOCIAL_YOUTUBE,
	SOCIAL_GITHUB
} from '../consts';

const today = new Date();
---

<footer>
	<div class="container">
		<!-- 上方區域：品牌 + 導航 + 社群 -->
		<div class="footer-top">
			<!-- 品牌資訊 -->
			<div class="footer-brand">
				<h3>{STUDIO_NAME}</h3>
				<p class="brand-subtitle">{STUDIO_NAME_EN}</p>
				<p class="tagline">讓複雜說得清楚，讓系統更能被交接</p>
				<p class="tax-id">統一編號：{STUDIO_TAX_ID}</p>
			</div>

			<!-- 快速導航 -->
			<div class="footer-nav">
				<div class="nav-column">
					<h4>產品</h4>
					<ul>
						<li><a href="/features">Doc Engine 介紹</a></li>
						<li><a href="/features">功能特色</a></li>
						<li><a href="/get-started?source=footer-demo">範例報告</a></li>
					</ul>
				</div>

				<div class="nav-column">
					<h4>服務</h4>
					<ul>
						<li><a href="/pricing">定價方案</a></li>
						<li><a href="/get-started">開始使用</a></li>
						<li><a href="/contact?type=enterprise">企業方案</a></li>
					</ul>
				</div>

				<div class="nav-column">
					<h4>關於</h4>
					<ul>
						<li><a href="/about">關於我們</a></li>
						<li><a href="/contact">聯絡我們</a></li>
						<li><a href="/pricing#faq">常見問題</a></li>
					</ul>
				</div>
			</div>

			<!-- 社群連結 -->
			<div class="footer-social">
				<h4>追蹤我們</h4>
				<div class="social-links">
					<a href={SOCIAL_LINKEDIN} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
						</svg>
					</a>
					<a href={SOCIAL_YOUTUBE} target="_blank" rel="noopener noreferrer" aria-label="YouTube">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
						</svg>
					</a>
					<a href={SOCIAL_GITHUB} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</a>
				</div>
			</div>
		</div>

		<!-- 分隔線 -->
		<div class="footer-divider"></div>

		<!-- 下方區域：版權 + 法律 -->
		<div class="footer-bottom">
			<div class="copyright">
				<p>&copy; {today.getFullYear()} {STUDIO_NAME}. All rights reserved.</p>
				<p class="powered-by">Powered by Doc Engine</p>
			</div>
			<div class="legal-links">
				<a href="/terms">使用條款</a>
				<span class="separator">|</span>
				<a href="/privacy">隱私權政策</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		background: linear-gradient(to bottom, #f9fafb, #f3f4f6);
		border-top: 1px solid #e5e7eb;
		padding: 3rem 0 1.5rem;
		margin-top: 4rem;
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	/* 上方區域 */
	.footer-top {
		display: grid;
		grid-template-columns: 2fr 3fr 1fr;
		gap: 3rem;
		margin-bottom: 2.5rem;
	}

	/* 品牌資訊 */
	.footer-brand h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: #1e40af;
		margin: 0 0 0.5rem 0;
	}

	.brand-subtitle {
		font-size: 0.875rem;
		color: #6b7280;
		margin: 0 0 0.75rem 0;
	}

	.tagline {
		font-size: 0.875rem;
		color: #4b5563;
		margin: 0 0 1rem 0;
		line-height: 1.5;
	}

	.tax-id {
		font-size: 0.875rem;
		color: #6b7280;
		margin: 0;
	}

	/* 快速導航 */
	.footer-nav {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.nav-column h4 {
		font-size: 0.875rem;
		font-weight: 600;
		color: #1f2937;
		margin: 0 0 1rem 0;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.nav-column ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.nav-column li {
		margin-bottom: 0.5rem;
	}

	.nav-column a {
		color: #6b7280;
		text-decoration: none;
		font-size: 0.875rem;
		transition: color 0.2s ease;
	}

	.nav-column a:hover {
		color: #1e40af;
	}

	/* 社群連結 */
	.footer-social h4 {
		font-size: 0.875rem;
		font-weight: 600;
		color: #1f2937;
		margin: 0 0 1rem 0;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: white;
		border-radius: 0.5rem;
		color: #6b7280;
		transition: all 0.2s ease;
		border: 1px solid #e5e7eb;
	}

	.social-links a:hover {
		color: #1e40af;
		border-color: #1e40af;
		transform: translateY(-2px);
	}

	/* 分隔線 */
	.footer-divider {
		height: 1px;
		background: #e5e7eb;
		margin: 2rem 0;
	}

	/* 下方區域 */
	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.copyright {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.copyright p {
		margin: 0;
		font-size: 0.875rem;
		color: #6b7280;
	}

	.powered-by {
		font-size: 0.75rem !important;
		color: #9ca3af !important;
	}

	.legal-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-size: 0.875rem;
	}

	.legal-links a {
		color: #6b7280;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.legal-links a:hover {
		color: #1e40af;
	}

	.separator {
		color: #d1d5db;
	}

	/* 響應式設計 */
	@media (max-width: 1024px) {
		.footer-top {
			grid-template-columns: 1fr;
			gap: 2.5rem;
		}

		.footer-nav {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	@media (max-width: 640px) {
		footer {
			padding: 2rem 0 1rem;
		}

		.footer-nav {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.footer-bottom {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>

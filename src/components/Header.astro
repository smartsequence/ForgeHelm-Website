---
import { STUDIO_NAME } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav class="container">
		<div class="logo">
			<a href="/">
				<span class="logo-text">{STUDIO_NAME}</span>
			</a>
		</div>
		
		<div class="nav-links">
			<HeaderLink href="/pricing">定價方案</HeaderLink>
			<HeaderLink href="/features">功能介紹</HeaderLink>
			<HeaderLink href="/about">關於我們</HeaderLink>
			<HeaderLink href="/contact">聯絡我們</HeaderLink>
		</div>
		
		<div class="cta-button">
			<a href="/get-started" class="btn-primary">開始試用</a>
		</div>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: white;
		border-bottom: 1px solid #e5e7eb;
		box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 4rem;
		gap: 2rem;
	}

	.logo a {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo-text {
		font-size: 1.125rem;
		font-weight: 600;
		color: #0ea5e9;
		white-space: nowrap;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 2rem;
		flex: 1;
		justify-content: center;
	}

	.cta-button .btn-primary {
		display: inline-block;
		padding: 0.625rem 1.5rem;
		background: linear-gradient(135deg, #0ea5e9 0%, #334155 100%);
		color: white;
		border-radius: 0.5rem;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
		white-space: nowrap;
	}

	.cta-button .btn-primary:hover {
		transform: translateY(-1px);
		box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
	}

	/* 響應式設計 */
	@media (max-width: 768px) {
		nav {
			flex-wrap: wrap;
			height: auto;
			padding: 0.75rem 0;
		}

		.logo {
			flex: 1;
		}

		.nav-links {
			order: 3;
			flex-basis: 100%;
			justify-content: flex-start;
			gap: 1rem;
			margin-top: 0.75rem;
			padding-top: 0.75rem;
			border-top: 1px solid #e5e7eb;
		}

		.cta-button {
			order: 2;
		}

		.cta-button .btn-primary {
			padding: 0.5rem 1rem;
			font-size: 0.875rem;
		}
	}

	@media (max-width: 480px) {
		.nav-links {
			flex-wrap: wrap;
			gap: 0.75rem;
		}

		.logo-text {
			font-size: 1rem;
		}
	}
</style>

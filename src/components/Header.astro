---
import { STUDIO_NAME } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav class="container">
		<div class="logo">
			<a href="/">
				<span class="logo-text">{STUDIO_NAME}</span>
			</a>
		</div>
		
		<div class="nav-links">
			<HeaderLink href="/pricing">定價方案</HeaderLink>
			<HeaderLink href="/features">功能介紹</HeaderLink>
			<HeaderLink href="/about">關於我們</HeaderLink>
			<HeaderLink href="/contact">聯絡我們</HeaderLink>
		</div>
		
		<div class="cta-button">
			<a href="/get-started" class="btn-primary">開始試用</a>
		</div>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: var(--bg-footer);
		backdrop-filter: blur(10px);
		box-shadow: var(--shadow-md);
		border-bottom: 1px solid var(--border-light);
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 5rem;
		gap: 2rem;
	}

	.logo a {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo-text {
		font-size: 1.125rem;
		font-weight: 700;
		color: white;
		white-space: nowrap;
		letter-spacing: -0.01em;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 2.5rem;
		flex: 1;
		justify-content: center;
	}

	.nav-links :global(a) {
		color: rgba(255, 255, 255, 0.9);
		font-weight: 500;
		font-size: 0.9375rem;
		transition: all 0.2s ease;
		text-decoration: none;
	}

	.nav-links :global(a:hover) {
		color: white;
	}

	.cta-button .btn-primary {
		display: inline-block;
		padding: 0.75rem 1.75rem;
		background: var(--cta-primary);
		color: white;
		border-radius: var(--radius-md);
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9375rem;
		transition: all 0.2s ease;
		white-space: nowrap;
		box-shadow: var(--shadow-sm);
	}

	.cta-button .btn-primary:hover {
		background: var(--cta-hover);
		transform: translateY(-1px);
		box-shadow: var(--shadow-md);
	}

	/* 響應式設計 */
	@media (max-width: 768px) {
		nav {
			flex-wrap: wrap;
			height: auto;
			padding: 0.75rem 0;
		}

		.logo {
			flex: 1;
		}

		.nav-links {
			order: 3;
			flex-basis: 100%;
			justify-content: flex-start;
			gap: 1rem;
			margin-top: 0.75rem;
			padding-top: 0.75rem;
			border-top: 1px solid #e5e7eb;
		}

		.cta-button {
			order: 2;
		}

		.cta-button .btn-primary {
			padding: 0.5rem 1rem;
			font-size: 0.875rem;
		}
	}

	@media (max-width: 480px) {
		.nav-links {
			flex-wrap: wrap;
			gap: 0.75rem;
		}

		.logo-text {
			font-size: 1rem;
		}
	}
</style>
